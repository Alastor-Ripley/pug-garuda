# Maintainer: Thomas "Ventto" Venri√®s <thomas.venries@gmail.com>
pkgname='pug'
pkgver=1.0
pkgrel=1
pkgdesc='Saves the list of packages installed via Pacman and AUR to gist files.'
arch=('x86_64' 'i686')
license=('GPL')
depends=('pacman>=5.0' 'gist>=4.5.0')
makedepends=('make' 'git')
url="https://github.com/Ventto/${pkgname}.git"
source=("https://github.com/Ventto/${pkgname}/archive/master.zip")
sha256sums=('SKIP')

package() {
  cd "${srcdir}/${pkgname}-master"
  make DESTDIR="${pkgdir}" install
}
